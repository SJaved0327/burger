<div class="container">
  
  <div class="row"><!-- ROW 1 -->
   
    <div class="col-lg-2"><!-- 1.0 COL 2 -->
    </div>

    <div class="col-lg-8"><!-- 1.0 COL 8 -->
    <!-- START Main App Content -->
      
      <div class="row"><!-- ROW 1 -->
        
        <div class="col-lg-12 text-center">
          <h1>It's Burger Time!</h1>
          <img src="/assets/img/burger.png" alt="Hamburger" height="100px" width="100px">
          <br>
          <form class="create-form">

            <div class="form-group">
              <label for="bur">Add a burger:</label>
              <input type="text" id="bur" name="name"> <button type="submit">Submit</button>
            </div>

            <div class="form-group">
              <label for="devoured">Devoured?</label><br>
              <input type="radio" name="devoured" value="1" checked> Devoured!<br>
              <input type="radio" name="devoured" value="0"> Can't wait to eat it!
            </div>

          </form>
        </div>

      </div>
      
      <div class="row"><!-- ROW 2 -->

        <!-- Devoured -->
        <div class="col-lg-6"><!-- 2.0 COL 6 -->

          <h2>Burgers that are not devoured!</h2>

          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/unless}}
            {{/each}}
          </ul>

        </div>

        <!-- Not Devoured -->
        <div class="col-lg-6"><!-- 2.0 COL 6 -->

          <h2>Burgers that are devoured!</h2>

          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/if}}
            {{/each}}
          </ul>

        </div>

      </div>

    <!-- END Main App Content -->
    </div>

    <div class="col-lg-2"><!-- 1.0 COL 2 -->
    </div>
  
  </div>

</div>
